<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net472;net6.0</TargetFrameworks>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\NServiceBus.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="7.0.1" AutomaticVersionRange="false" />
    <PackageReference Include="NServiceBus" Version="8.2.4" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Particular.Packaging" Version="4.2.0" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="AcceptanceTesting" Key="$(NServiceBusTestsKey)" />
    <InternalsVisibleTo Include="UnitTests" Key="$(NServiceBusTestsKey)" />
  </ItemGroup>

</Project>